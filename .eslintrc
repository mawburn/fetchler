{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "extends": ["prettier"],
  "plugins": ["prettier", "import"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "eqeqeq": ["error", "always"],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unexpected-multiline": "error",
    "prefer-const": "error",
    "prettier/prettier": "error",
    "no-var": "error"
  },
  "env": {
    "browser": true,
    "node": false
  },
  "settings": {
    "import/extensions": [".ts"]
  }
}
